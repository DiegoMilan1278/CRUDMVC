@model FinalMvc.Models.Cliente
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3 style="font-family:serif">Detalle del Cliente</h3>
        </div>
    </div>
    <div class="class= col-sm-3">
        <a asp-controller="Clientes" asp-action="Index" asp-area="" class="btn btn-outline-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
            </svg>
        </a>
    </div>
    <div class="row">

        <div class="col-sm-10">
            <div class="card">
                <div class="card-body">
                    <div class="col-sm-6 offset-sm-3">
                        <form method="post" asp-action="CreateCliente" class="mt-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="CedulaCliente" class="control-label">Cedula del Cliente</label>
                                <input asp-for="CedulaCliente" class="form-control" disabled/>
                                <span asp-validation-for="CedulaCliente" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NombreCliente" class="control-label">Nombre del Cliente</label>
                                <input asp-for="NombreCliente" class="form-control" disabled />
                                <span asp-validation-for="NombreCliente" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ApellidoCliente" class="control-label">Apellido del Cliente</label>
                                <input asp-for="ApellidoCliente" class="form-control" disabled />
                                <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DireccionCliente" class="control-label">Direccion del Cliente</label>
                                <input asp-for="DireccionCliente" class="form-control" disabled />
                                <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TelefonoCliente" class="control-label">Telefono del Cliente</label>
                                <input asp-for="TelefonoCliente" class="form-control" disabled />
                                <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
                            </div><hr/>
                            <div class="text-center">
                                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.IdCliente">Editar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
