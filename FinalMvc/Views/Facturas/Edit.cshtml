@model FinalMvc.Models.Factura
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3 style="font-family:serif">Editar Factura</h3>
        </div>
    </div>
@*

Para Actualizar los datos, no me da una clara actualizacion en los productos 
y los valores ya que si los cambio no hay ninguna modificación en las demás tablas.

*@
    <div class="row">
        <div class="col-sm-3">
            <a asp-controller="Facturas" asp-action="Index" asp-area="" class="btn btn-outline-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                    <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
                </svg>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post" asp-action="Edit" class="mt-3">
                <input type="hidden" asp-for="IdFactura" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="VentaId" class="control-label"></label>
                    <select asp-for="VentaId" class="form-control" asp-items="ViewBag.VentaId"></select>
                    <span asp-validation-for="VentaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdProductoF" class="control-label"></label>
                    <select asp-for="IdProductoF" class="form-control" asp-items="ViewBag.IdProductoF"></select>
                    <span asp-validation-for="IdProductoF" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
