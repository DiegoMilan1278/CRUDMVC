@model FinalMvc.Models.Factura

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-sm-3">
        <a asp-controller="Facturas" asp-action="Index" asp-area="" class="btn btn-outline-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
            </svg>
        </a>
    </div>
</div>
<hr/>
<div class="card">
    <div class="card-body">
        <h4 class="card-title" style="font-family:serif">Detalle</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venta.IdVenta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.NombreProducto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
        </dl>
    </div>
</div>
